// ! 필수입력 정보 
type User {
  id: ID! @unique
  name: String!
  firstName: String!
  lastName: String!
  bio: String
  posts: [Post!]!
  likes: [Like!]!
  comment: [Comment!]!
}

type Post {
  location: String!
  files: [File!]!
  caption: String!
  user: Wser
  likes: [Like!]!
  comment: [Comment!]!
}

type Like {
  user: User!
  post: Post!
}

type Comment {
  text: String!
  user: User!
  post: Post!
}

type File {
  url : String
  post : Post
}